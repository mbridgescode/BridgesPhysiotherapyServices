# Runtime configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# Database + encryption
MONGODB_URI=replace-with-your-mongodb-uri
ACCESS_TOKEN_SECRET=replace-with-strong-access-secret
REFRESH_TOKEN_SECRET=replace-with-strong-refresh-secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
DATA_ENCRYPTION_KEY=generate-a-32-byte-secret

# Network + security
CORS_ORIGIN=https://your-vercel-app.vercel.app
ENFORCE_HTTPS=true

# Email provider (Resend)
RESEND_API_KEY=
EMAIL_FROM_ADDRESS=no-reply@bridgesphysio.com

# Links for password reset emails
FRONTEND_BASE_URL=https://your-vercel-app.vercel.app/reset-password

# File output directories (override if using external storage)
STORAGE_ROOT=./storage
INVOICE_STORAGE_PATH=./storage/invoices
PDF_TEMP_PATH=./storage/tmp

# Chromium overrides for Puppeteer (optional)
CHROMIUM_REMOTE_EXEC_PATH=
CHROMIUM_LOCAL_EXEC_PATH=
CHROMIUM_PACK_URL=
